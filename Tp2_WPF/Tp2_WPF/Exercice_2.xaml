        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tp2_WPF"
        mc:Ignorable="d"
        Title="Exercice_2" Height="450" Width="800">
    <Grid>
        <DataGrid SelectedItem="{Binding SelectedF}" ItemsSource="{Binding listFiliere}" HorizontalAlignment="Left" Height="249" Margin="460,98,0,0" VerticalAlignment="Top" Width="269"/>
