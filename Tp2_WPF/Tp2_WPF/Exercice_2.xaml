        <Label Content="Nom de Filière" HorizontalAlignment="Left" Margin="58,189,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding SelectedF.Nom_filiere}" Name="entryFiliere" HorizontalAlignment="Left" Height="23" Margin="226,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Ajouter" HorizontalAlignment="Left" Margin="145,263,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Modifier" HorizontalAlignment="Left" Margin="504,373,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <Button Content="Supprimer" HorizontalAlignment="Left" Margin="622,373,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
